@using EntidadesCompartidas.Entidades;
@model List<Nave>

@{Layout = "_Layout";}
@{
    ViewData["Title"] = "Home Page";


        <table summary="Naves Lanzadas" border="1" class="p-3 mb-2 bg-dark text-white">
            <thead>
                <tr>
                    <th scope="col">Numero Nave</th>
                    <th scope="col">Nombre de la nave</th>
                    <th scope="col">Despegue</th>
                    <th scope="col">Agencia</th>
                    <th scope="col">Detalles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    @if (item is Tripulada)
                    {
                        <td>@item.Numero</td>
                        <td>@item.Nombre</td>
                        <td>@item.FechaDespegue</td>
                        <td>@item.Firma.Nombre</td>
                        <td>@Html.ActionLink("Ver", "Detalles", "Home", new { numero = item.Numero })</td>
                    }
                    @if(item is NoTripulada)
                    {
                        <td>@item.Numero</td>
                        <td>@item.Nombre</td>
                        <td>@item.FechaDespegue</td>
                        <td>@item.Firma.Nombre</td>
                        <td>@Html.ActionLink("Ver", "DetallesNT", "Home", new { numero = item.Numero })</td>                        
                    }
                    @if(item is VehiculoLanzadera)
                    {
                        <td>@item.Numero</td>
                        <td>@item.Nombre</td>
                        <td>@item.FechaDespegue</td>
                        <td>@item.Firma.Nombre</td>
                        <td>@Html.ActionLink("Ver", "DetallesV", "Home", new { numero = item.Numero })</td>
                    }
                </tr>  
                    }
                </tbody>
            <tfoot>
                <tr>
                    <th scope="row" colspan="2">Total de naves:</th>
                    <td colspan="3">@Model.Count </td>
                </tr>
            </tfoot>
        </table>  
    }